# Fathuss Platform Environment Variables
# Copy this file to .env and update with your actual secrets
# NEVER commit real secrets to version control

# JWT Configuration
JWT_SECRET=your-development-jwt-secret-key-here
JWT_REFRESH_SECRET=your-development-jwt-refresh-secret-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fathuss

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ClickHouse Configuration
CLICKHOUSE_HOST=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=password
CLICKHOUSE_DB=fathuss_analytics

# API Keys (Development/Testing only)
OPENAI_API_KEY=sk-your-openai-api-key-here
GITHUB_TOKEN=ghp_your-github-token-here
SENTRY_DSN=https://your-sentry-dsn-here
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id-here

# Encryption Keys
ENCRYPTION_KEY=your-encryption-key-here
ANTI_CHEAT_KEY=your-anti-cheat-key-here

# External Services
IPFS_HOST=localhost
IPFS_PORT=5001

# Monitoring
LOKI_USERNAME=admin
LOKI_PASSWORD=password

# Development Settings
NODE_ENV=development
DEBUG=true