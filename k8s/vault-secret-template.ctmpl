# Database Credentials Template
{{ with secret "database/creds/fathuss-role" }}
DATABASE_URL="postgresql://{{ .Data.username }}:{{ .Data.password }}@fathuss-postgresql:5432/fathuss"
{{ end }}

# JWT Secrets Template
{{ with secret "kv/fathuss/jwt" }}
JWT_SECRET="{{ .Data.secret }}"
JWT_REFRESH_SECRET="{{ .Data.refresh_secret }}"
{{ end }}

# Encryption Keys Template
{{ with secret "kv/fathuss/encryption" }}
ENCRYPTION_KEY="{{ .Data.key }}"
{{ end }}

# Anti-Cheat Keys Template
{{ with secret "kv/fathuss/anti-cheat" }}
ANTI_CHEAT_KEY="{{ .Data.key }}"
{{ end }}

# API Keys Template
{{ with secret "kv/fathuss/api-keys" }}
OPENAI_API_KEY="{{ .Data.openai }}"
GITHUB_TOKEN="{{ .Data.github }}"
SENTRY_DSN="{{ .Data.sentry }}"
WALLETCONNECT_PROJECT_ID="{{ .Data.walletconnect }}"
{{ end }}

# Redis Configuration
{{ with secret "kv/fathuss/redis" }}
REDIS_PASSWORD="{{ .Data.password }}"
REDIS_URL="redis://:{{ .Data.password }}@fathuss-redis:6379"
{{ end }}

# ClickHouse Configuration
{{ with secret "kv/fathuss/clickhouse" }}
CLICKHOUSE_PASSWORD="{{ .Data.password }}"
CLICKHOUSE_HOST="http://fathuss-clickhouse:8123"
CLICKHOUSE_USER="{{ .Data.username }}"
CLICKHOUSE_DB="{{ .Data.database }}"
{{ end }}

# RabbitMQ Configuration
{{ with secret "kv/fathuss/rabbitmq" }}
RABBITMQ_URL="amqp://{{ .Data.username }}:{{ .Data.password }}@fathuss-rabbitmq:5672"
{{ end }}